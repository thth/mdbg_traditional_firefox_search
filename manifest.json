{
  "manifest_version": 2,
  "name": "MDBG Traditional Chinese Dictionary Search",
  "version": "1.0",

  "description": "Search engine add-on for the MDBG Traditional Chinese Dictionary",

  "icons": {
    "48": "icons/mdbg48.png",
    "96": "icons/mdbg96.png"
  },

  "chrome_settings_overrides": {
    "search_provider": {
      "name": "MDBG Simplified Chinese",
      "search_url": "https://www.mdbg.net/chinese/dictionary?page=worddict&wdrst=1&wdqb={searchTerms}",
      "keyword": "mdbgt",
      "encoding": "UTF-8",
      "favicon_url": "https://www.mdbg.net/chinese/rsc/ico/favicon.ico"
    }
  }
}